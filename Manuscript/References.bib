pages = {562--576},
title = {{The Role of Competition in the Distribution of Andean Birds}},
url = {https://www-jstor-org.simsrad.net.ocs.mq.edu.au/stable/pdf/1935491.pdf?refreqid=excelsior{\%}3A7919ef5ad56f888853816f2508ba8bec},
