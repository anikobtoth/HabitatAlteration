author = {Ara{\'{u}}jo, Miguel B. and Rozenfeld, Alejandro and Rahbek, Carsten and Marquet, Pablo A.},
doi = {10.1111/j.1600-0587.2011.06919.x},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Ara{\'{u}}jo et al. - 2011 - Using species co-occurrence networks to assess the impacts of climate change.pdf:pdf},
isbn = {0906-7590},
issn = {09067590},
journal = {Ecography},
number = {6},
pages = {897--908},
title = {{Using species co-occurrence networks to assess the impacts of climate change}},
volume = {34},
year = {2011}
}
