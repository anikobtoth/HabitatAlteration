file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Hogg et al. - 2006 - Biotic interactions in Antarctic terrestrial ecosystems Are they a factor.pdf:pdf},
issn = {00380717},
journal = {Soil Biology and Biochemistry},
keywords = {Abiotic factors,Antarctica,Biotic interactions,Invertebrates,Lichens,Microbiology,Soil ecology,Terrestrial ecosystems},
month = {oct},
