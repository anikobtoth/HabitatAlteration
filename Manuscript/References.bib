issn = {03043800},
journal = {Ecological Modelling},
keywords = {Alpine plants,Cross-validation,Generalised linear models (GLM),Model evaluation,Niche-based modelling,Swiss Alps},
month = {nov},
number = {2},
pages = {142--152},
title = {{Evaluating the ability of habitat suitability models to predict species presences}},
