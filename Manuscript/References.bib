file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Blois et al. - 2013 - Modeling the climatic drivers of spatial patterns in vegetation composition since the Last Glacial Maximum.pdf:pdf},
issn = {09067590},
journal = {Ecography},
month = {apr},
number = {4},
pages = {460--473},
publisher = {Blackwell Publishing Ltd},
title = {{Modeling the climatic drivers of spatial patterns in vegetation composition since the Last Glacial Maximum}},
