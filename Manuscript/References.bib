doi = {10.1111/j.1466-8238.2011.00705.x},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Baiser et al. - 2012 - Geographic variation in network structure of a nearctic aquatic food web.pdf:pdf},
isbn = {1978756615},
issn = {1466822X},
journal = {Global Ecology and Biogeography},
keywords = {Chain length,Climate,Food web,Keystone predation,Network structure,North America,Pitcher plant,Sarracenia purpurea},
number = {5},
