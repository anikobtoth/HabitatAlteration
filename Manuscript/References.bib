file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Villegas, Garitano-Zavala - 2010 - Bird community responses to different urban conditions in La Paz, Bolivia.pdf:pdf},
issn = {10838155},
journal = {Urban Ecosystems},
keywords = {Andes,Bird communities,Elevation,Gradient,Urban ecology,Urbanization},
number = {3},
pages = {375--391},
title = {{Bird community responses to different urban conditions in La Paz, Bolivia}},
