doi = {10.1002/ecy.1605},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Harris - 2016 - Inferring species interactions from co-occurrence data with Markov networks.pdf:pdf},
issn = {00129658},
journal = {Ecology},
keywords = {Markov network,Markov random field,absence matrix,biogeography,ecological interactions,ising model,null model,occurrence data,presence,species associations},
month = {dec},
number = {12},
pages = {3308--3314},
title = {{Inferring species interactions from co-occurrence data with Markov networks}},
