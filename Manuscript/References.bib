issn = {1466-8238},
journal = {Global Ecology and Biogeography},
keywords = {Chao 1,New World bats,body mass,feeding guilds,latitudinal diversity gradients,species richness},
mendeley-groups = {Thesis/Thesis_Ch3/Updated},
month = {jun},
number = {6},
