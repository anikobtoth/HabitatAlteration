issn = {14668238},
journal = {Global Ecology and Biogeography},
keywords = {Kilimanjaro,bottom-up effects,elevational gradient,frugivorous birds,fruiting plants,land-use gradient,structural equation models},
number = {8},
pages = {963--972},
title = {{Direct and indirect effects of climate, human disturbance and plant traits on avian functional diversity}},
