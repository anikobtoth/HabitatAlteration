issn = {1466-822X},
journal = {Global Ecology and Biogeography},
keywords = {Bioclimatic envelope models,Europe,Parnassius mnemosyne,climate change,clouded Apollo butterfly,cross‐validation,macroecology,sensitivity analysis,uncertainty},
