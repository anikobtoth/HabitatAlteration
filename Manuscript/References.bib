file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Fraser et al. - 2020 - High-resolution mapping of circum-Antarctic landfast sea ice distribution, 2000-2018.pdf:pdf},
issn = {18663516},
journal = {Earth System Science Data},
keywords = {sea ice},
mendeley-tags = {sea ice},
number = {4},
pages = {2987--2999},
title = {{High-resolution mapping of circum-Antarctic landfast sea ice distribution, 2000-2018}},
volume = {12},
year = {2020}
}
@article{Massom2013,
abstract = {Recent analyses have shown that significant changes have occurred in patterns of sea ice seasonality in West Antarctica since 1979, with wide-ranging climatic, biological and biogeochemical consequences. Here, we provide the first detailed report on long-term change and variability in annual timings of sea ice advance, retreat and resultant ice season duration in East Antarctica. These were calculated from satellite-derived ice concentration data for the period 1979/80 to 2009/10. The pattern of change in sea ice seasonality off East Antarctica comprises mixed signals on regional to local scales, with pockets of strongly positive and negative trends occurring in near juxtaposition in certain regions e.g., Prydz Bay. This pattern strongly reflects change and variability in different elements of the marine "icescape", including fast ice, polynyas and the marginal ice zone. A trend towards shorter sea-ice duration (of 1 to 3 days per annum) occurs in fairly isolated pockets in the outer pack from∼95-110°E, and in various near-coastal areas that include an area of particularly strong and persistent change near Australia's Davis Station and between the Amery and West Ice Shelves. These areas are largely associated with coastal polynyas that are important as sites of enhanced sea ice production/melt. Areas of positive trend in ice season duration are more extensive, and include an extensive zone from 160-170°E (i.e., the western Ross Sea sector) and the near-coastal zone between 40-100°E. The East Antarctic pattern is considerably more complex than the well-documented trends in West Antarctica e.g., in the Antarctic Peninsula-Bellingshausen Sea and western Ross Sea sectors. {\textcopyright} 2013 Massom et al.},
author = {Massom, Robert and Reid, Philip and Stammerjohn, Sharon and Raymond, Ben and Fraser, Alexander and Ushio, Shuki},
doi = {10.1371/journal.pone.0064756},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Massom et al. - 2013 - Change and Variability in East Antarctic Sea Ice Seasonality, 197980-200910.pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
keywords = {Antarctica,Ice shelves,Latitude,Oceans,Polynyas,Sea ice,Sea water,Seasons,ice seasonality},
mendeley-tags = {ice seasonality},
month = {may},
number = {5},
pages = {64756},
pmid = {23705008},
publisher = {Public Library of Science},
title = {{Change and Variability in East Antarctic Sea Ice Seasonality, 1979/80-2009/10}},
url = {www.plosone.org},
volume = {8},
year = {2013}
}
@article{Wauchope2019,
abstract = {Threats to Antarctic biodiversity are escalating, despite its remoteness and protection under the Antarctic Treaty. Increasing human activity, pollution, biological invasions and the omnipresent impacts of climate change all contribute, and often combine, to exert pressure on Antarctic ecosystems and environments. Here we present a continent-wide assessment of terrestrial biodiversity protection in Antarctica. Despite Antarctic Specially Protected Areas covering less than 2% of Antarctica, 44% of species (including seabirds, plants, lichens and invertebrates) are found in one or more protected areas. However, protection is regionally uneven and biased towards easily detectable and charismatic species like seabirds. Systematic processes to prioritize area protection using the best available data will maximize the likelihood of ensuring long-term protection and conservation of Antarctic biodiversity.},
