journal = {Psychometrika},
keywords = {Bayes modal estimation,bayesian,hierarchical linear model,hierarchical model,mixed model,multilevel model,penalized likelihood,variance estimation,weakly informative prior},
mendeley-tags = {bayesian,hierarchical model,weakly informative prior},
number = {4},
pages = {685--709},
title = {{A NONDEGENERATE PENALIZED LIKELIHOOD ESTIMATOR FOR VARIANCE PARAMETERS IN MULTILEVEL MODELS}},
url = {http://dx.doi.org/10.1007/s11336-013-9328-2},
volume = {78},
