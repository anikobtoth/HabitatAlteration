issn = {07224060},
keywords = {Antarctic Conservation Biogeographic Regions (ACBR,DNA barcoding,Nematoda,Rotifera,Tardigrada},
month = {aug},
number = {10},
pages = {1517--1531},
publisher = {Springer Verlag},
title = {{A review of current Antarctic limno-terrestrial microfauna}},
