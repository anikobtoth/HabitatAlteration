publisher = {Wiley},
title = {{A new method for non-parametric multivariate analysis of variance}},
url = {https://onlinelibrary.wiley.com/doi/full/10.1111/j.1442-9993.2001.01070.pp.x https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1442-9993.2001.01070.pp.x https://onlinelibrary.wiley.com/doi/10.1111/j.1442-9993.2001.01070.pp.x},
