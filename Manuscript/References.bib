keywords = {Coorong, Murray-Darling Basin, South Australia,alternative stable states,ecological response modelling,ecosystem states,multivariate analysis,spatial variation,temporal variation},
month = {oct},
number = {1},
pages = {1--11},
title = {{Modelling future conditions in the degraded semi-arid estuary of Australia's largest river using ecosystem states}},
volume = {85},
year = {2009}
