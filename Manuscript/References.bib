doi = {10.1073/pnas.1416072111},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Zazula et al. - 2014 - American mastodon extirpation in the Arctic and Subarctic predates human colonization and terminal Pleistocene cl.pdf:pdf},
journal = {PNAS},
number = {52},
pages = {18460--18465},
title = {{American mastodon extirpation in the Arctic and Subarctic predates human colonization and terminal Pleistocene climate change}},
