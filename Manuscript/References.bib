issn = {1466822X},
journal = {Global Ecology and Biogeography},
keywords = {Assembly rules,Co-occurrence,Community structure,Competition,Macroecology,Species association},
number = {1},
pages = {39--49},
title = {{Species co-occurrence: The case of congeneric species and a causal approach to patterns of species association}},
