keywords = {Community,Complexity,Food web,Rare species,Stability},
pages = {7--10},
title = {{Connectance of species interaction networks and conservation value: Is it any good to be well connected?}},
url = {https://estudogeral.sib.uc.pt/bitstream/10316/41311/1/Heleno et al 2012 Ecological Indicators - Connectance of species interaction networks and conservation value{\%}2C Is it any good to be well connected.pdf},
volume = {14},
