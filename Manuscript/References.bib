file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Presley et al. - 2009 - Elements of metacommunity structure of Paraguayan bats multiple gradients require analysis of multiple ordinatio.pdf:pdf},
journal = {Oecologia},
keywords = {Biogeography {\textperiodcentered},Boundary clumping {\textperiodcentered},Coherence {\textperiodcentered},Reciprocal averaging {\textperiodcentered},Species composition},
pages = {781--793},
title = {{Elements of metacommunity structure of Paraguayan bats: multiple gradients require analysis of multiple ordination axes}},
url = {http://www.myweb.ttu.edu/richstev/pubs/032.pdf},
volume = {160},
