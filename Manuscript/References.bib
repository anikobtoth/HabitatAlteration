doi = {10.1111/ecog.03592},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/de Assis Bomfim et al. - 2018 - Local extinctions of obligate frugivores and patch size reduction disrupt the structure of seed dispersa.pdf:pdf},
issn = {09067590},
journal = {Ecography},
keywords = {frugivory,mutualistic networks,patch size},
month = {nov},
number = {11},
pages = {1899--1909},
publisher = {Blackwell Publishing Ltd},
title = {{Local extinctions of obligate frugivores and patch size reduction disrupt the structure of seed dispersal networks}},
url = {http://doi.wiley.com/10.1111/ecog.03592},
volume = {41},
year = {2018}
}
