doi = {10.1111/j.l365-2664.2010.01949.x},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Power, Stout - 2011 - Organic dairy farming impacts on insect-flower interaction networks and pollination.pdf:pdf},
