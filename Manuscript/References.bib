journal = {Quaternary Science Reviews},
keywords = {Extinctions,North America,Paleontology,Pleistocene,Radiocarbon},
pages = {48--57},
publisher = {Elsevier Ltd},
title = {{A case of early Wisconsinan “over-chill”: New radiocarbon evidence for early extirpation of western camel (Camelops hesternus) in eastern Beringia}},
