issn = {00220477},
journal = {Journal of Ecology},
keywords = {annual plants,coexistence,competition,competitive outcomes,environmental heterogeneity,facilitation,fitness differences,niche},
month = {sep},
number = {5},
pages = {1839--1852},
publisher = {Blackwell Publishing Ltd},
title = {{Accurate predictions of coexistence in natural systems require the inclusion of facilitative interactions and environmental dependency}},
url = {http://doi.wiley.com/10.1111/1365-2745.13030},
