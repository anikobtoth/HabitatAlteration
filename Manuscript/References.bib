doi = {10.1016/j.quascirev.2017.06.031},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Zazula et al. - 2017 - A case of early Wisconsinan “over-chill” New radiocarbon evidence for early extirpation of western camel (Cam.pdf:pdf},
