@misc{Arita2016,
abstract = {Veech (2013, Global Ecology and Biogeography, 22, 252–260) introduced a formula to calculate the probability of two species co-occurring in various sites under the assumption of statistical independence between the two distributional patterns. He presented his model as a new procedure, a ‘pairwise approach', different from analyses of whole presence–absence matrices to examine patterns of co-occurrence. Here I show that: (1) Veech's method is identical to Fisher's exact test, a standard procedure for measuring the statistical association between two discrete variables; (2) in a broad sense, the pairwise approach is very similar to early analyses of spatial association, such as the one advanced by Forbes in 1907; (3) implicit in Veech's formula is a sampling scheme that is indistinguishable from well-known matrix-level null models that randomize the distribution of species among equiprobable sites; (4) pairwise co-occurrence patterns can be analysed using any matrix-level null model, so pairwise comparisons are not limited to using Veech's formula. The methodological distinction that Veech proposed between pairwise and matrix-level approaches does not in fact exist, although the conceptual distinction between the two approaches is still a debated topic.},
annote = {Arita basically attacks Veech on the grounds that his probabilistic approach is distinctly not novel and that his assessment of co-occurrence measures distinguish unnecessarily between matrix-wide and pairwise measures. He shows using arithmetic and simulations that Veech's approach is indistinguishable from Fisher's exact test and analogous to SIM2 (Gotelli 2000). 

The argument about Fisher's hypergeometric test seems pretty solid, though I'm unconvinced that the emphasis on the F-E SIM2 algorithm was warranted. Veech recognized the conceptual connection between his algorithm and SIM2, but asserted that his algorithm sidesteps the error problems with randomizations. This paper did not mention errors. Veech did fail to recognize the connection between his approach and Fisher's exact test.},
author = {Arita, H{\'{e}}ctor T.},
booktitle = {Global Ecology and Biogeography},
doi = {10.1111/geb.12418},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Arita - 2016 - Species co-occurrence analysis Pairwise versus matrix-level approaches.pdf:pdf},
issn = {14668238},
keywords = {Contingency table,Distribution,Diversity,Fisher's exact test,Presence-absence matrix,Randomization},
pages = {1--4},
title = {{Species co-occurrence analysis: Pairwise versus matrix-level approaches}},
year = {2016}
}
@article{Bar-Massada2015,
abstract = {Species co-occurrence analysis is commonly used to assess how interspecific interactions dictate community assembly. Non-random co-occurrences, however, may also emerge from niche differences as well as environmental heterogeneity. The relationships between species co-occurrence patterns, environmental heterogeneity and species niches are not fully understood, due to complex interactions among them. To analyse the relationships among these patterns and processes, I developed synthetic community models and analysed a large dataset of tree species across the conterminous United States. Niche overlap and environmental heterogeneity had significant and contrasting effects on species co-occurrence patterns, in both modelled and real communities. Niche breadth, in turn, affected the effect sizes of both variables on species co-occurrence patterns. The effect of niche breadth on the relationship between co-occurrence and niche overlap was markedly consistent between modelled and real communities, while its effect on the relationship between co-occurrence and environmental heterogeneity was mostly consistent between real and modelled data. The results of this analysis highlight the complex and interactive effects of species niche overlap, niche breadth and environmental heterogeneity on species co-occurrence patterns. Therefore, inferring ecological processes from co-occurrence patterns without accounting for these fundamental characteristics of species and environments may lead to biased conclusions.},
annote = {Examines the interrelationships between co-occurrence (using no cutoff just actual c-score!), niche breadth, niche overlap, and environmental heterogeneity (EH) using one carefully simulated and one real tree dataset. Simulations suggest that co-occurrence of specialists (species with narrower niche breadth) is more strongly affected by EH than that of generalists. Co-occurrence of generalists is more strongly affected by niche overlap (i.e. competition for space). Co-occurrence is more strongly affected by both factors when more species are present at a site (i.e. when competition is stronger). Empirical analyses did not contradict the simulation results but tended to offer only weak support. Importantly co-occurrence patterns did emerge based on niche requirements (habitat) and biogeographic patterns, but in the absence of explicit interactions. Thus, when looking for evidence of interspecific interactions in co-occurrence, one must be careful to filter out climatic/habitat and geographic signals from co-occurrence data. 

I need to think a bit more about this study. I feel like the simulations were pretty carefully constructed under assumptions that satisfy the model, and am not surprised the results were so clear cut. Bit skeptical about the empirical results, which were only weakly supportive. Not sure about the non-independent factors (EH and niche overlap/niche breadth all based on E) though his argument for the arrangement is intuitive. 
I am drawn by the incorporation of co-occurrence patterns into a wider framework that helps with their interpretation-- this idea of using them in conjunction with SDM's and other variables like EH. May serve as connective tissue for networks ideas and the tentative EH analyses.},
author = {Bar-Massada, Avi},
