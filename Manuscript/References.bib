issn = {2296-701X},
journal = {Frontiers in Ecology and Evolution},
keywords = {Apex predator,Capybara,Carnivory,Giant anteater,Megafauna,Optimal foraging theory,Panthera onca,Pleistocene extinction,Preferred prey weight range,Prey preferences,accessible prey,numerical response,predator-prey interactions},
month = {jan},
pages = {148},
publisher = {Frontiers},
title = {{Prey Preferences of the Jaguar Panthera onca Reflect the Post-Pleistocene Demise of Large Prey}},
