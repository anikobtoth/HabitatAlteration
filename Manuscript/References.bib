journal = {Ecology},
keywords = {absence matrix,community assembly rules,meta-analysis,null models,presence,species co-occurrence},
number = {8},
pages = {2091--2096},
title = {{Species co-occurrence: A meta-analysis of JM Diamond's assembly rules model}},
volume = {83},
year = {2002}
}
