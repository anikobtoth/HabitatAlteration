@article{Pires2015,
abstract = {The end of the Pleistocene was marked by the extinction of almost all large land mammals worldwide except in Africa. Although the debate on Pleisto-cene extinctions has focused on the roles of climate change and humans, the impact of perturbations depends on properties of ecological communities, such as species composition and the organization of ecological interactions. Here, we combined palaeoecological and ecological data, food-web models and community stability analysis to investigate if differences between Pleis-tocene and modern mammalian assemblages help us understand why the megafauna died out in the Americas while persisting in Africa. We show Pleistocene and modern assemblages share similar network topology, but differences in richness and body size distributions made Pleistocene commu-nities significantly more vulnerable to the effects of human arrival. The structural changes promoted by humans in Pleistocene networks would have increased the likelihood of unstable dynamics, which may favour extinction cascades in communities facing extrinsic perturbations. Our find-ings suggest that the basic aspects of the organization of ecological communities may have played an important role in major extinction events in the past. Knowledge of community-level properties and their consequences to dynamics may be critical to understand past and future extinctions.},
annote = {Only paper I know of that really employs a network approach on paleontological large mammals. The authors create a food web of pleistocene megafauna (methods are a bit debatable, there is a lot of indirect evidence and inference of links using body size). They then investigate the effects of losing large megafauna on the network structure and the effects of a new predator (humans). They focus on nestedness and modularity. Their work apparently implies that the arrival of humans resulted in a more fragile network structure than before. Broader implications are that community level properties may play a role in extinction risk and the resilience of species. 

Thoughts: on first read this paper seemed a bit contrived to me, because the networks were inferred, not built with observational data (such as stomach contents). Body size of predators was used to estimate which prey species might be consumed. This seems a bit simplistic to me. But they did use previously published network models which presumably makes the analysis acceptable. Tests showed that about 70{\%} of modern predator-prey interactions are predicted accurately, meaning if similar rules apply (likely) then the paleo food webs are about 70{\%} accurate on average, so some are worse. From what I know about networks, the error in the network models could produce network results that are not reliable in the rest of the study.

This approach also does not take into account prey specialization in large predators and hypercarnivory... 

I found that the authors were not clear on how their measurements of mod and nest translate to their claims about network topology; it seems these claim are mosty based on comparing effects. They say that nestedness may translate to less stability. 

Modern and pleistocene networks apparently had similar structures, but pleistocene assemblages were more sensitive to human arrival, allegedly because of their predator to prey species richness (not topology).},
author = {Pires, Mathias M and Koch, Paul L and Fari{\~{n}}a, Richard A and {De Aguiar}, Marcus A M and {Dos Reis}, S{\'{e}}rgio F and Guimar{\~{a}}es, Paulo R},
doi = {10.1098/rspb.2015.1367},
file = {:Users/aniko/Library/Application Support/Mendeley Desktop/Downloaded/Pires et al. - Unknown - Pleistocene megafaunal interaction networks became more vulnerable after human arrival.pdf:pdf},
journal = {Proceedings of the Royal Society B},
keywords = {Subject Areas,collapse,ecology,extinction,mammals community stability,palaeontology Keywords},
number = {1814},
title = {{Pleistocene megafaunal interaction networks became more vulnerable after human arrival}},
url = {http://dx.doi.org/10.1098/rspb.2015.1367 http://rspb.royalsocietypublishing.org.},
volume = {282},
year = {2015}
}
